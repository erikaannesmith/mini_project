<h1>Welcome, <%= current_user.email %>!</h1>

<% if current_user.default? %>
    <p><%= link_to "Portfolio", user_designs_path(current_user) %></p>
    <p><%= link_to "Contacts", user_contacts_path(current_user) %></p>
<% else %>
    <p><%= link_to "All Designers", users_path %></p>


<% end %>
    
<p><%= link_to "Log Out", logout_path, method: :delete %></p>