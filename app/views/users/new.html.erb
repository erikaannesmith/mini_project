<div class = "wrapper">
<div class = "first-line">
<h1>Register</h1>
</div>
<div class = "content">

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br/><br/>

  <%= f.label :password %>
  <%= f.text_field :password %><br/><br/>

  <%= f.label :company_name %>
  <%= f.text_field :company_name %><br/><br/>

  <%= f.label :location %>
  <%= f.text_field :location %><br/><br/>

  <%= f.label :website %>
  <%= f.text_field :website %><br/><br/>

  <%= f.submit "Submit" %>
<% end %>
</div>
</div>