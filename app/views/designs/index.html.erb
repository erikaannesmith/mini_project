<%= link_to "Dashboard", user_dashboard_index_path(current_user) %>
<%= link_to "Contacts", user_partnerships_path(current_user) %>
<%= link_to "Log Out", logout_path, method: :delete %></br>


<h1>Design Portfolio</h1>
<%= link_to "New Design", new_user_design_path(current_user) %>
<ul>
<% @designs.reverse.each do |design| %>
  <li>
  <%= link_to "#{design.name}", user_design_path(current_user, design) %><br>
  Posted <%= distance_of_time_in_words(Time.now, design.created_at) %> ago
  <%= link_to "Edit", edit_user_design_path(current_user, design) %>
  <%= link_to "Delete", user_design_path(current_user, design), method: :delete %>
  
  <% if design.images.exists? %>
    <br><br>
    <% design.images.each do |image| %>
      <%= image_tag image.image.url, width: '100', height: 'auto' %>
    <% end %>
    <br><br>
  <% end %>
  
  <br>
  </li>
<% end %>
</ul>
